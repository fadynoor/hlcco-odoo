    <template id="latest_posts_snippet" name="Posts List">
        <section class="s_latest_posts latest-blog spad">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="section-title">
                            <h2>From The Blog</h2>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="js_get_impacto_posts" data-loading="true" data-template="theme_fashi.media_list_template"/>
                </div>
            </div>
        </section>
    </template>

    <!-- Latest posts's Template -->
    <template id="media_list_template">
        <t t-if="not posts">
            <t t-call="theme_fashi.no_blog_posts"/>
        </t>
        <t t-if="posts">
            <t t-foreach="posts" t-as="p">
                <div class="col-lg-4 col-md-6">
                    <div class="single-latest-blog">
                        <t t-call="website.record_cover"/>
                        <div class="latest-text">
                            <!-- <div class="tag-list">
                                <div class="tag-item">
                                    <i class="fa fa-calendar-o"></i>
                                    May 4,2019
                                </div>
                                <div class="tag-item">
                                    <i class="fa fa-comment-o"></i>
                                    5
                                </div>
                            </div> -->
                            <a t-att-href="'/blog/%s/post/%s' % (p.blog_id.id, p.id)">
                                <h4 t-field="p.name"/>
                            </a>
                            <p t-field="p.subtitle"/>
                        </div>
                    </div>
                </div>
            </t>
        </t>
    </template>

    <!-- No post here, template -->
    <template id="no_blog_posts">
        <div class="container readable">
            <div class="alert alert-warning alert-dismissible text-center" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&#215;</span>
                </button>
                <h3>No posts here...</h3>
                <p>Please, be sure that your posts are not in draft state</p>
            </div>
        </div>
    </template>

    <template id="place_into_bar" inherit_id="website.snippets" name="Place into bar">
        <xpath expr="//div[@id='snippet_feature']//t[@t-snippet][last()]" position="after">
            <t t-snippet="theme_fashi.data_slider_snippet"
                t-thumbnail="/theme_fashi/static/img/snippets/04.jpg"/>
            <t t-snippet="theme_fashi.static_product_list_snippet"
                t-thumbnail="/theme_fashi/static/img/snippets/05.jpg"/>
            <t t-snippet="theme_fashi.instagram_snippet"
                t-thumbnail="/theme_fashi/static/img/snippets/03.jpg"/>
            <t t-snippet="theme_fashi.testimonial_snippet"
                t-thumbnail="/theme_fashi/static/img/snippets/s_quotes_slider_2.gif"/>
            <t t-snippet="theme_fashi.benefit_snippet"
                t-thumbnail="/theme_fashi/static/img/snippets/s_three_columns.png"/>
            <t t-snippet="theme_fashi.latest_posts_snippet"
                t-thumbnail="/theme_fashi/static/img/snippets/02.jpg"/>
        </xpath>
    </template>
